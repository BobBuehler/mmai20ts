{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",

        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,

        "outDir": "dist", // If you modify this be sure to update the `run` file(s)!
        "baseUrl": "./",
    },
    "include": [
        "joueur/**/*.ts",
        "joueur/**/*.d.ts",
        "games/**/*.ts",
        "games/**/*.d.ts",
        "index.ts"
    ]
}
